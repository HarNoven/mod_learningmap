<style id="svgstyle" type="text/css">
.place {
    fill: {{ placecolor }};
    stroke-width: 3px;
    stroke: {{ strokecolor }};
    {{^editmode}}
    visibility: hidden;
    {{/editmode}}
}
.path {
    stroke: {{ strokecolor }};
    stroke-width: 3px;
    {{^editmode}}
    visibility: hidden;
    {{/editmode}}
}
{{#editmode}}
.place:hover {
    fill: blue;
}
.path:hover {
    stroke: blue;
    stroke-width: 6px;
}
.selected {
    stroke: green;
}
.selected2 {stroke-dasharray: 10; animation: dashdraw 4s linear infinite;}
       @keyframes dashdraw {to {stroke-dashoffset: 200;}}
{{/editmode}}
</style>